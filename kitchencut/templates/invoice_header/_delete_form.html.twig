<form method="post" action="{{ path('invoice_header_delete', {'id': invoice_header.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice_header.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
</form>
